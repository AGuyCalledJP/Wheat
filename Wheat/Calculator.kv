<Calculator>:
    id: calculator
    keyboard: key

    FloatLayout:
        pos_hint: {'x' : 0, 'y' : 0}
        size_hint: 1, 1
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        FloatLayout:
            pos_hint: {'x' : 0, 'y' : .8}
            size_hint: 1, 0.2

            Label:
                pos_hint: {'x' : 0, 'y' : 0}
                size_hint: 1, 1
                id: display
                multiline: False
                font_size: root.fontSizer
                text: root.equation_text

        FloatLayout:
            pos_hint: {'x' : 0, 'y' : 0}
            size_hint: 1, 0.8
            Keyboard:
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                id: key
                spacing: 1
                cols: 5
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4 - 0.05
                    font_size: root.fontSizer
                    text: u'\u221a'
                    on_press: calculator.ClickedSqrt()
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4
                    font_size: root.fontSizer
                    text: 'sin'
                    on_press: calculator.ClickedSin()
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4 -0.05
                    font_size: root.fontSizer
                    text: 'cos'
                    on_press: calculator.ClickedCos()
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4
                    font_size: root.fontSizer
                    text: 'tan'
                    on_press: calculator.ClickedTan()
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4 -0.05
                    font_size: root.fontSizer
                    text: u'\u03c0'
                    on_press: calculator.ClickedPi()

                Button:
