                    font_size: root.fontSizer
                    text: 'x^-1'
                    on_press: calculator.ClickedInv()
                Button:
                    background_normal: ''
                    background_color: root.c1, root.c2, root.c3, root.c4
                    font_size: root.fontSizer
                    text: '('
                    on_press: calculator.ClickedLeftP()
                Button:
                    background_normal: ''
