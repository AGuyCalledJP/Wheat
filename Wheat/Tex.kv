<Tex>:
    id: tex

    FloatLayout:
        id: container
        pos_hint: {'x' : 0.0, 'y' : 0.0}
        size_hint: 1, 1
        canvas.before:
            Color:
                rgba: root.c1,root.c2,root.c3,0.5
            RoundedRectangle:
                pos: self.pos
                size: self.size

        CheckBox:
            id: check
            pos_hint: {'x': 0.025,'y': 0.05}
            size_hint: .1,0.1
            canvas.before:
                Color:
                    rgba: root.c1,root.c2,root.c3,.5
                Rectangle:
                    pos: self.pos
                    size: self.size

        FloatLayout:
            id: toggle_container
            pos_hint: {'x' : 0.8725, 'y' : 0.05}
            size_hint: 0.1, 0.1
            canvas.before:
                Color:
                    rgba: root.c1,root.c2,root.c3,1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

            ToggleButton:
                state: "normal"
                id: hide_bot_button
                pos_hint: {'x': 0, 'y': 0.0}
                size_hint: .5, 1
                background_color: 0,0,0,0
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                text: "H"
                on_press:
                    hide_bot_button.pos_hint= {'x': 0.5, 'y': 0.0}
                    container.size_hint = 1,0.85
                    input.hide_input(dohide=True)
                    toggle_container.size_hint = 0.1,0.125
                    hide_bot_button.text = "U"
                on_release:
                    container.size_hint = 1,1
                    input.hide_input(dohide=False)
                    hide_bot_button.pos_hint= {'x': 0.0, 'y': 0.0}
                    toggle_container.size_hint = 0.1,0.1
                    hide_bot_button.text = "H"

        FloatLayout:
            pos_hint: {'x' : 0.025, 'y' : 0.05}
            size_hint: 0.95, 0.9

            Input:
                id: input
                pos_hint: {'x' : 0.0, 'y' : 0.8}
                size_hint: 1, 0.2
                canvas.before:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                TextInput:
                    id: equation
                    pos_hint: {'x' : 0.05, 'y' : 0.05}
                    size_hint: 0.7,0.9
                    multiline: False

                Button:
                    id: hider
                    pos_hint: {'x' : 0.8, 'y' : 0.05}
                    size_hint: 0.15,0.9
                    background_color: 0,0,0,0
                    canvas.before:
                        Color:
                            rgba: root.c1,root.c2,root.c3,root.c4
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    text: 'Submit'
                    on_press: root.write()
