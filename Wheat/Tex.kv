<Tex>:
    id: tex

    FloatLayout:
        pos_hint: {'x' : 0.0, 'y' : 0.0}
        size_hint: 1, 1

        Bar:
            id: header
            pos_hint: {'x' : 0.0, 'y' : 0.85}
            size_hint: 1, 0.15
            canvas.before:
                Color:
                    rgba: root.c1,root.c2,root.c3,root.c4
                Rectangle:
                    pos: self.pos
                    size: self.size

            ToggleButton:
                state: "normal"
                id: hide_bot_button
                pos_hint: {'x': .05, 'y': 0.05}
                size_hint: .2, .9
                text: "Hide Input"
                on_press:
                    # header.size_hint_x =
                    input.hide_input()
                    hide_bot_button.text = "Unhide"
                on_release:
                    # header.size_hint_x = 
                    input.hide_input(dohide=False)
                    hide_bot_button.text = "Hide Input"

        # Display:
        #     id: display
        #     pos_hint: {'x' : 0.0, 'y' : 0.2}
        #     size_hint: 1, 0.65

        Input:
            id: input
            pos_hint: {'x' : 0.0, 'y' : 0.0}
            size_hint: 1, 0.2
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            TextInput:
                id: equation
                pos_hint: {'x' : 0.05, 'y' : 0.05}
                size_hint: 0.7,0.9
                multiline: False

            Button:
                pos_hint: {'x' : 0.8, 'y' : 0.05}
                size_hint: 0.15,0.9
                text: "Run"
                on_press: root.write()
