<MyScreenManager>:

    Screen1:
        name: 'screen1'

<Screen1>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "blank-notebook-paper-template.jpg"

    BoxLayout:

        orientation: 'vertical'

        GridLayout:

            cols: 2
            padding: 20
            spacing: 20
            size_hint: 1, .1

            Button:
                text: 'Add Widget'
                on_release: root.add()

            Button:
                text: 'Remove Widget'
                on_release: root.remove()

        ScrollView:

            do_scroll_x: False
            do_scroll_y: True
