<WheatScreen>:
    name: 'Wheat1'
    id: Wheat
    draw: pad
    widg: widget_list
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "visual_assets/wheat_bg_1_college.png"

    GridLayout:

        cols: 4
        padding: 20
        spacing: 20
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}
        canvas.before:
            Color:
                rgba: 253, 253, 253, 1
                #rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            root: Wheat
            text: 'Prev page'
            color: 1, .3, .4 , .85
            background_color: 1,1,1,1
            background_normal: ''
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "Wheat1"

        WheatBlocksDropDownMenuButton:
            text: 'E'
            id: widget_menu
            root: Wheat
            color: 1, .3, .4 , .85
            background_normal: 1, .3, .4 , .85
            background_down: 0.3, 0.3, 0.3, 1
            font_name: 'assets/fontello.ttf'
            font_size: sp(34)
            color: 1, 1, 1, 1

        Button:
            root: Wheat
            text: 'Draw'
            color: 1,1,1,1.
            background_color: 1, .3, .4 , .85
            background_normal: ''
            on_release: root.drawToggle()

        Button:
            root: Wheat
            text: 'Next page'
            color: 1, .3, .4 , .85
            background_color: 1,1,1,1
            background_normal: ''

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "Wheat2"

    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    FloatLayout:
        id: widget_list
