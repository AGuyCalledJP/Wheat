<WheatScreen>:
    name: 'Wheat1'
    id: Wheat
    draw: pad
    manager: space_manager
    space1: one
    space2: two
    space3: three

    GridLayout:

        cols: 8
        padding: 20
        spacing: 20
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}
        canvas.before:
            Color:
                rgba: 253, 253, 253, .1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            root: Wheat
            text: 'Prev page'
            color: 1, .3, .4 , .85
            background_color: 1,1,1,1
            background_normal: ''
            on_release:
                pad.pageBack()
                root.pageBack()
                space_manager.transition.direction = 'right'

        #Widget Menu
        WheatBlocksDropDownMenuButton:
            text: 'Widgets'
            id: widget_menu
            root: Wheat
            color: 1, .3, .4 , .85
            background_normal: 1, .3, .4 , .85
            background_down: 0.3, 0.3, 0.3, 1
            color: 1, 1, 1, 1

        #Draw Menu
        DrawDropDownMenuButton:
            text: 'Drawing'
            id: draw_menu
            root: Wheat
            color: 1, .3, .4 , .85
            background_normal: 1, .3, .4 , .85
            background_down: 0.3, 0.3, 0.3, 1
            color: 1, 1, 1, 1

        Button:
            root: Wheat
            text: 'Save'
            color: 1,1,1,1.
            background_color: 1, .3, .4 , .85
            background_normal: ''
            on_release: root.Save()

        Button:
            root: Wheat
            text: 'Load'
            color: 1,1,1,1.
            background_color: 1, .3, .4 , .85
            background_normal: ''
            on_release: root.Load()

        Button:
            root: Wheat
            text: 'Load Writing'
            color: 1,1,1,1.
            background_color: 1, .3, .4 , .85
            background_normal: ''
            on_release: root.LoadWriting()

        Button:
            root: Wheat
            text: 'Save Writing'
            color: 1,1,1,1.
            background_color: 1, .3, .4 , .85
            background_normal: ''
            on_release: root.SaveWriting()

        Button:
            root: Wheat
            text: 'Next page'
            color: 1, .3, .4 , .85
            background_color: 1,1,1,1
            background_normal: ''
            on_release:
                pad.pageForward()
                root.pageForward()
                space_manager.transition.direction = 'left'

    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    LiveManager:
        id: space_manager
        WorkSpace1:
            id: one
            name: 'o'
        WorkSpace2:
            id: two
            name: 't'
        WorkSpace3:
            id: three
            name: "tr"

<WorkSpace1>:
    id: widgSpaceOne
    FloatLayout:
        id: flone

<WorkSpace2>:
    id: widgSpaceTwo
    FloatLayout:
        id: fltwo

<WorkSpace3>:
    id: widgSpaceThree
    FloatLayout:
        id: flthree

