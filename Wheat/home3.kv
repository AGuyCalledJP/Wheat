#TODO - Add a place for the page number and total pages in the notebook to display
<WheatScreen>:
    name: 'Wheat1'
    id: Wheat
    draw: pad
    manager: space_manager
    space1: one
    space2: two
    space3: three


    ############################################################################
    # FULL MENU CONTAINER
    ############################################################################
    GridLayout:
        id: menu_container
        cols: 1
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}
        spacing: 5

        ############################################################################
        # PRIMARY MENU BUTTONS
        ############################################################################
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            id: toolbar_main
            size_hint: 1, .5
            pos_hint: {'x': 0, 'y': .5}

# TODO: NOT BEING ABLE TO MOVE TO NEXT PAGE SHOULD RENDER THESE AS UNUSABLE IN SOME VISIBLE WAY
            Button:
                root: Wheat
                text: '<<'
                color: 1,1,1,1
                font_size: '30sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    pad.pageBack()
                    root.pageBack()
                    space_manager.transition.direction = 'right'
                    pgn.update_Page_Num()

            #TODO: currently, can have both buttons be untoggled. intended behavior should always have one button toggled
            ToggleButton:
                text: 'Widgets'
                id: widget_menu
                group: "tools"
                root: Wheat
                color: 1,1,1,1
                background_normal: ''
                background_color: 1, .3, .4 , 1
                # on_press:
                #     widget_menu.state: 'down' if widget_menu.state == 'down' else 'normal'
                on_release:
                    #switch visibility on toolbars, and toggle drawing
                    toolbar_draw.visible = False
                    toolbar_widget.visible = True

            PageNum:
                id: pgn
                color: 1, .3, .4 , 1
                # padding: 5,0
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                font_size: '15sp'

            ToggleButton:
                text: 'Drawing'
                id: draw_menu
                group: "tools"
                state: 'down'
                root: Wheat
                color: 1,1,1,1
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    #switch visibility on toolbars, and toggle drawing
                    toolbar_draw.visible = True
                    toolbar_widget.visible = False

            # TODO: NOT BEING ABLE TO MOVE TO NEXT PAGE SHOULD RENDER THESE AS UNUSABLE IN SOME VISIBLE WAY
            Button:
                root: Wheat
                text: '>>'
                color: 1,1,1,1
                font_size: '30sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    pad.pageForward()
                    root.pageForward()
                    space_manager.transition.direction = 'left'
                    pgn.update_Page_Num()

        ############################################################################
        # DRAWING TOOLBAR
        ############################################################################
        BoxLayout:
            orientation: 'horizontal'
            id: toolbar_draw

            visible: True
            size_hint_x: 1 if self.visible == True else 0
            size_hint_y: .5 if self.visible == True else 0
            opacity: 1 if self.visible == True else 0
            disabled: not self.visible

            pos_hint: {'x': 0, 'y': 0}
            spacing: 5

            Button:
                text: 'Undo'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release: Wheat.undo()

            Button:
                text: 'Redo'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release: Wheat.redo()

            Button:
                text: 'Clear'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release: Wheat.clear()


            DrawDropDownMenuButton:
                text: 'ColorPicker'
                id: color_drop
                root: Wheat
                background_normal: style.rose
                color: 1, 1, 1, 1

            StrokeLabel:
                id: stroke_label
                color: 1,1,1,1
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                font_size: '15sp'
                canvas.before:
                    Color:
                        rgba: 1, .3, .4 , 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Button:
                text: '-'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.sizeDown()
                    stroke_label.update_stroke_label(pad.getSize())

            Button:
                text: '+'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.sizeUp()
                    stroke_label.update_stroke_label(pad.getSize())

            Button:
                text: 'Page Type'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release: pad.pageType()

        ############################################################################
        # WIDGET TOOLBAR
        ############################################################################
        BoxLayout:
            orientation: 'horizontal'
            id: toolbar_widget

            visible: False
            size_hint_x: 1 if self.visible == True else 0
            size_hint_y: .5 if self.visible == True else 0
            opacity: 1 if self.visible == True else 0
            disabled: not self.visible

            pos_hint: {'x': 0, 'y': 0}
            spacing: 5

            Button:
                text: 'Python'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.add()

            Button:
                text: 'Function'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.addFunc()

            Button:
                text: 'Calculator'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.addCalc()

            Button:
                text: 'Geometry'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.addGeo()

            Button:
                text: 'LaTeX'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.addTex()

            Button:
                text: 'Remove'
                color: 1,1,1,1
                font_size: '15sp'
                background_normal: ''
                background_color: 1, .3, .4 , 1
                on_release:
                    Wheat.remove()
        Widget:
            size_hint_y: 0

    ############################################################################
    # DRAWPAD
    ############################################################################
    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    LiveManager:
        id: space_manager
        WorkSpace1:
            id: one
            name: 'o'
        WorkSpace2:
            id: two
            name: 't'
        WorkSpace3:
            id: three
            name: "tr"

<WorkSpace1>:
    id: widgSpaceOne
    FloatLayout:
        id: flone

<WorkSpace2>:
    id: widgSpaceTwo
    FloatLayout:
        id: fltwo

<WorkSpace3>:
    id: widgSpaceThree
    FloatLayout:
        id: flthree

############################################################################
# DRAWING TOOLBAR
############################################################################
<DrawDropDownMenu>:
    id: draw_drop
    # size_hint_x: 1
    # size_hint_y: .1
    spacing: 10
    padding: 10
    DropDownButton:
        size_hint_y: None
        size_hint_x: None
        pos_hint: {'x': .5, 'y': 1}
        height: dp(40)
        on_release:
            root.parent_obj.root.chColor(col ='black')
            # self.set_text_color(style.black,root.color_drop) # FIXME: need a way to properly
        background_normal: style.black
        color: style.white
    DropDownButton:
        size_hint_y: None
        size_hint_x: None
        pos_hint: {'x': .5, 'y': 1}
        height: dp(40)

        on_release:
            root.parent_obj.root.chColor(col ='red')
            # self.set_text_color(style.draw_red,root.color_drop) # FIXME: need a way to properly point to the menu button that produces the dropdown to change color
        background_normal: style.draw_red
        color: style.white
