<Geometry>:
    id: geometry
    interaction_space: body
    canvas.before:
        Color:
            rgba: 1,1,1,1.
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        id: header
        pos_hint: {'x' : 0, 'y' : .9}
        size_hint: 1, 0.1
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1.
            Rectangle:
                pos: self.pos
                size: self.size
        CheckBox:
            id: check
            pos_hint: {'x': 0,'y': 0}
            size_hint: .3,1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1.
                Rectangle:
                    pos: self.pos
                    size: self.size
    FloatLayout:
        id: body
        pos_hint: {'x' : 0, 'y' : 0}
        size_hint: 1, 0.9
        FloatLayout:
            id: left
            pos_hint: {'x' : 0, 'y' : 0}
            size_hint: .5, 1
            PointLayout:
        FloatLayout:
            id: right
            pos_hint: {'x' : .5, 'y' : 0}
            size_hint: .5, 1


<PointLayout>:
    id: point
