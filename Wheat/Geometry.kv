<Geometry>:
    id: geometry
    canvas.before:
        Color:
            rgba: 1,1,1,1.
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        id: header
        pos_hint: {'x' : 0, 'y' : .9}
        size_hint: 1, 0.1
        canvas.before:
            Color:
                rgba: 0,0,0,.3
            Rectangle:
                pos: self.pos
                size: self.size
        CheckBox:
            id: check
            pos_hint: {'x': 0,'y': 0}
            size_hint: .1,1
            canvas.before:
                Color:
                    rgba: .5, 0, 0, 1. #MAROON-.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        Button:
            id: hide_right_button
            pos_hint: {'x': .4, 'y': 0}
            size_hint: .2, 1
            text: "Hide Buttons"
            background_color: [1,.3,.3,1]
            color: 1,1,1,1


#TODO: layout that contains figures needs to be shrank inwards in all directions because points will clip off the edge
#TODO: layout that contains figures shouldn't also contain checkbox
    FloatLayout:
        id: body
        pos_hint: {'x' : 0, 'y' : 0}
        size_hint: 1, 0.9
        # PointLayout:
        BoxLayout:
            id: left_pane
            pos_hint: {'x' : 0 ,'y' : 0}
            size_hint: .66,1
            padding: 30
            canvas.before:
                Color:
                    rgba: .4, 0, 0, 1.
                Rectangle:
                    pos: self.pos
                    size: self.size
            FloatLayout:
                id: interactive_space
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1.
                    Rectangle:
                        pos: self.pos
                        size: self.size
                PointLayout:

        FloatLayout:
            id: right_pane
            pos_hint: {'x' : .66 ,'y' : 0}
            size_hint: .34,1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1.
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                padding: 5
                cols: 1
                id: mode_buttons
                pos_hint: {'x' : 0, 'y' : .66}
                size_hint: 1, .34
                canvas.before:
                    Color:
                        rgba: 0, 1, 0, 1.
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    id: add_mode_button
                    text: "Add Mode"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
                Button:
                    id: select_mode_button
                    text: "Move Mode"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
                Button:
                    id: select_mode_button
                    text: "Select Mode"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]

            GridLayout:
                padding: 5
                cols: 1
                id: operation_buttons
                pos_hint: {'x' : 0, 'y' : 0}
                size_hint: 1, .66
                canvas.before:
                    Color:
                        rgba: 0, 0, 1, 1.
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Button:
                    id: distance_button
                    text: "Find Distance"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
                Button:
                    id: angle_button
                    text: "Find Angle"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
                Button:
                    id: area_button
                    text: "Find Area"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]

                Button:
                    id: perimeter_button
                    text: "Find Perimeter"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
                Button:
                    id: center_button
                    text: "Find Center"
                    color: 1,1,1,1
                    # padding: 5
                    background_color: [.8,.1,.2,1]
<PointLayout>:
    id: point
