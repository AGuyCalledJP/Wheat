<MyScreenManager>:

    Screen1:
        name: 'screen1'
    Screen2:
        name: 'screen2'
<Screen2>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "blank-notebook-paper-template.jpg"

    BoxLayout:

        orientation: 'vertical'

        GridLayout:

            cols: 4
            padding: 20
            spacing: 20
            size_hint: 1, .1

            Button:
                text: 'Prev page'
                on_release:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'screen1'
            Button:
                text: 'Yeet'
                on_release: root.add()

            Button:
                text: 'DeYeet'
                on_release: root.remove()

            Button:
                text: 'Next page'
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'screen2'

        ScrollView:

            do_scroll_x: False
            do_scroll_y: True

            FloatLayout:

                id: widget_list
