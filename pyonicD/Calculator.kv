<Calculator>:
    id: calculator
    keyboard: key

    Label:
        id: display
        pos_hint: {'x' : 0, 'y' : .9}
        size_hint: 1, 0.1
        multiline: False
        text: root.equation_text

    Keyboard:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
        id: key
        cols: 5
        Button:
            background_normal: ''
            background_color: root.c1, root.c2, root.c3, root.c4 - 0.05
            font_size: root.fontSizer
            text: u'\u221a'
            on_press: calculator.ClickedSqrt()
        Button:
            background_normal: ''
            background_color: root.c1, root.c2, root.c3, root.c4
            font_size: root.fontSizer
            text: 'sin'
            on_press: calculator.ClickedSin()
        Button:
            background_normal: ''
            background_color: root.c1, root.c2, root.c3, root.c4 -0.05
            font_size: root.fontSizer
            text: 'cos'
            on_press: calculator.ClickedCos()
