<WheatScreen>:
    name: 'Wheat1'
    id: Wheat
    draw: pad
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "blank-notebook-paper-template.jpg"

    GridLayout:

        cols: 4
        padding: 20
        spacing: 20
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}

        Button:
            root: Wheat
            text: 'Prev page'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "Wheat1"
