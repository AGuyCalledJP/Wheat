        WheatBlocksDropDownMenuButton:
            text: 'E'
            id: widget_menu
            root: Wheat
            background_normal: 0.3, 0.3, 0.3, 1
            background_down: 0.1, 0.1, 0.1, 1
            font_name: 'assets/fontello.ttf'
            font_size: sp(34)
            color: 1, 1, 1, 1
            
        # Button:
        #     root: Wheat
        #     text: 'Geometry'
        #     on_release:

        Button:
            root: Wheat
            text: 'Draw'
            on_release: root.drawToggle()

        # Button:
