<WheatScreen2>:
    name: 'Wheat2'
    id: Wheat
    draw: pad
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "blank-notebook-paper-template.jpg"

    GridLayout:

        cols: 5
        padding: 20
        spacing: 20
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}

        Button:
            root: Wheat
            text: 'Prev page'
            on_release:
                root.manager.transition.direction = 'right'
                root.manager.current = "Wheat1"
        Button:
            root: Wheat
            text: 'Python'
            on_release: root.add()

        Button:
            root: Wheat
            text: 'Function'
            on_release: root.addFunc()

        # Button:
        #     root: Wheat
        #     text: 'Remove Widget'
        #     on_release: root.remove()

        Button:
            root: Wheat
            text: 'Next page'

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "Wheat2"

        Button:
            root: Wheat
            text: 'Draw'
            on_release: root.drawToggle()

    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    FloatLayout:

        id: widget_list

<WheatBlocksDropDownMenu>:
    id: drop
    DropDownButton:
        text: 'Python'
        size_hint_y: None
        height: dp(40)
        text_size: self.size
        padding_x: dp(10)
        valign: 'middle'
        on_release: root.parent_obj.root.add()
    Widget:
        size_hint_y: None
        height: dp(2)
    DropDownButton:
        text: 'Function'
        size_hint_y: None
        height: dp(40)
        text_size: self.size
        padding_x: dp(10)
        valign: 'middle'
        on_release: root.parent_obj.root.addFunc()
    Widget:
        size_hint_y: None
        height: dp(2)
    DropDownButton:
        text: 'Calculator'
        size_hint_y: None
        height: dp(40)
        text_size: self.size
        padding_x: dp(10)
        valign: 'middle'
        on_release: root.parent_obj.root.addCalc()
    Widget:
        size_hint_y: None
        height: dp(2)
    DropDownButton:
        text: 'Geometry'
        size_hint_y: None
        height: dp(40)
        text_size: self.size
        padding_x: dp(10)
        valign: 'middle'
        on_release: root.parent_obj.root.addGeo()
    Widget:
        size_hint_y: None
        height: dp(2)
    DropDownButton:
        text: 'Remove'
        size_hint_y: None
        height: dp(40)
        text_size: self.size
