<WheatScreen>:
    id: Wheat
    draw: pad
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "blank-notebook-paper-template.jpg"

    GridLayout:

        cols: 5
        padding: 20
        spacing: 20
        size_hint: 1, .1
        pos_hint: {'x': 0, 'y': .9}

        Button:
            root: Wheat
            text: 'Prev page'
            on_release:
                root.manager.current = "screen1"
                root.manager.transition.direction = 'right'
        Button:
            root: Wheat
            text: 'Python'
            on_release: root.add()

        Button:
            root: Wheat
            text: 'Function'
            on_release: root.addFunc()

        # Button:
        #     root: Wheat
        #     text: 'Remove Widget'
        #     on_release: root.remove()

        Button:
            root: Wheat
            text: 'Next page'

            on_release:
                root.manager.current = "screen2"
                root.manager.transition.direction = 'left'
        
        Button:
            root: Wheat
            text: 'Draw'
            on_release: root.drawToggle()

    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    FloatLayout:

        id: widget_list