        #     on_release: root.remove()

        Button:
            root: Wheat
            text: 'Next page'

            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = "Wheat2"

    Draw:
        id: pad
        size_hint: 1, .9
        pos_hint: {'x': 0, 'y': 0}
        orientation: 'vertical'

    FloatLayout:

        id: widget_list
