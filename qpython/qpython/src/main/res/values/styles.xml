<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="selectableItemBackground">@drawable/toolbar_button_bg</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/popupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/popupMenuTextAppearanceLarge</item>
    </style>

    <style name="popupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="popupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="DefaultBlueToolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="nav_menu_style" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="selectableItemBackground">@drawable/nav_menu_bg</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ConsoleTheme" parent="@android:style/Theme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="WebViewTheme" parent="FinestWebViewTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <!-- Base application theme. -->
    <style name="DownActivityTheme" parent="AppTheme">
        <!-- Customize your theme here. -->

        <item name="selectableItemBackground">@drawable/nav_menu_bg</item>
    </style>


    <style name="EditorSettingTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

    <style name="ItemMenuTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Toolbar.Item" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--Toolbar样式，使用方式：style="@style/Toolbar" 要改变返回按钮样式时，要配合app:theme使用-->
    <style name="Toolbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="elevation">3dp</item>

        <item name="titleTextColor">#fff</item>
        <item name="subtitleTextColor">#fff</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionMenuTextAppearance">@style/Toolbar.Item</item>
    </style>
    <!--Toolbar主题，使用方式：app:theme="@style/ToolbarTheme"-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--控件颜色，如返回按钮箭头图标的颜色-->
        <item name="colorControlNormal">#fff</item>
    </style>

</resources>
